<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="MainInfoPlace">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/detail_main_info_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitlePlace">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/detail_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MorePlace">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SearchCountDiscover">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/discover_search_count_size</item>
    </style>

    <style name="SubTitlePlaceDetail">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/place_detail_subtitle_text_size</item>
    </style>

    <style name="SubInfoPlaceDetail">
        <item name="android:textSize">@dimen/place_detail_subinfo_text_size</item>
    </style>

    <style name="ItemReviewsName">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemReviewsScore">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/place_detail_rating_text_size</item>
    </style>

    <style name="ItemReviewsContent">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/place_detail_subinfo_text_size</item>
    </style>

    <style name="PlaceDetailCheckinButton" parent="Base.Widget.AppCompat.ButtonBar">
        <item name="android:background">@color/color_yellow_checkin</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="QuickSearchIcon">
        <item name="android:layout_width">@dimen/quick_search_icon_size</item>
        <item name="android:layout_height">@dimen/quick_search_icon_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="QuickSearchText">
        <item name="android:textSize">@dimen/quick_search_text_size</item>
        <item name="android:layout_marginTop">@dimen/quick_search_text_margin_top</item>
    </style>

    <style name="DiscoverTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DiscoverTitle.Sub">
        <item name="android:textSize">@dimen/discover_title_sub_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
